<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="edu.wustl.catissuecore.domain.User"
        table="CATISSUE_USER"
        lazy="true"
    >

    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_USER_SEQ</param>
              <!--
                  To add non XDoclet generator parameters, create a file named
                  hibernate-generator-params-User.xml
                  containing the additional parameters and place it in your merge dir.
              -->
            </generator>
        </id>

        <property
            name="emailAddress"
            type="string"
            update="true"
            insert="true"
            column="EMAIL_ADDRESS"
            length="255"
        />

        <property
            name="firstName"
            type="string"
            update="true"
            insert="true"
            column="FIRST_NAME"
            length="255"
        />

        <property
            name="lastName"
            type="string"
            update="true"
            insert="true"
            column="LAST_NAME"
            length="255"
        />

        <property
            name="loginName"
            type="string"
            update="true"
            insert="true"
            column="LOGIN_NAME"
            length="255"
            not-null="true"
            unique="true"
        />

        <property
            name="startDate"
            type="date"
            update="true"
            insert="true"
            column="START_DATE"
        />

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="50"
        />

		  <property
            name="firstTimeLogin"
            type="boolean"
            update="true"
            insert="true"
            column="FIRST_TIME_LOGIN"
        />

        <many-to-one
            name="department"
            class="edu.wustl.catissuecore.domain.Department"
            cascade="none"

            update="true"
            insert="true"
            column="DEPARTMENT_ID"  lazy="false"
        />

        <many-to-one
            name="cancerResearchGroup"
            class="edu.wustl.catissuecore.domain.CancerResearchGroup"
            cascade="none"

            update="true"
            insert="true"
            column="CANCER_RESEARCH_GROUP_ID"  lazy="false"
        />

        <many-to-one
            name="institution"
            class="edu.wustl.catissuecore.domain.Institution"
            cascade="none"

            update="true"
            insert="true"
            column="INSTITUTION_ID"  lazy="false"
        />

        <many-to-one
            name="address"
            class="edu.wustl.catissuecore.domain.Address"
            cascade="none"

            update="true"
            insert="true"
            column="ADDRESS_ID"
        />

        <set
            name="collectionProtocolCollection"
            table="CATISSUE_COLL_COORDINATORS"
            lazy="true"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

        <cache usage="read-write" />

            <key
                column="USER_ID"
            >
            </key>

            <many-to-many
                class="edu.wustl.catissuecore.domain.CollectionProtocol"
                column="COLLECTION_PROTOCOL_ID"

             />

        </set>

        <property
            name="csmUserId"
            type="long"
            update="true"
            insert="true"
            column="CSM_USER_ID"
            length="20"
        />

        <property
            name="comments"
            type="string"
            update="true"
            insert="true"
            column="STATUS_COMMENT"
            length="2000"
        />
