            cascade="save-update"
            sort="unsorted"
        >

            <key
                column="USER_ID"
            >
            </key>

            <many-to-many
                class="edu.wustl.catissuecore.domain.ClinicalStudy"
                column="CLINICAL_STUDY_ID"

             />

        </set>

-->
         <set
            name="siteCollection"
            table="CATISSUE_SITE_USERS"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="USER_ID"
            >
            </key>

            <many-to-many
                class="edu.wustl.catissuecore.domain.Site"
                column="SITE_ID"
                outer-join="auto"
             />

        </set>

         <set
            name="assignedProtocolCollection"
            table="CATISSUE_USER_CP"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="USER_ID"
            >
            </key>

            <many-to-many
                class="edu.wustl.catissuecore.domain.CollectionProtocol"
                column="COLLECTION_PROTOCOL_ID"
                outer-join="auto"
             />

        </set>

		 <property
            name="dirtyEditFlag"
            type="boolean"
            update="true"
            insert="true"
            column="DIRTY_EDIT_FLAG"
        />

        <property
            name="remoteId"
            type="long"
            update="true"
            insert="true"
            column="REMOTE_IDENTIFIER"
            length="30"
        />

        <property
            name="remoteManagedFlag"
            type="boolean"
            update="true"
            insert="true"
            column="REMOTE_MANAGED_FLAG"
        />

           <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-User.xml
            containing the additional properties and place it in your merge dir.
        -->
    </class>

</hibernate-mapping>
