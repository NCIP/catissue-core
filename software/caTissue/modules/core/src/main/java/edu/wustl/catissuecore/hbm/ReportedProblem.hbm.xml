<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="edu.wustl.catissuecore.domain.ReportedProblem"
        table="CATISSUE_REPORTED_PROBLEM"
		lazy="true"
    >
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_REPORTED_PROBLEM_SEQ</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ReportedProblem.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="affiliation"
            type="string"
            update="true"
            insert="true"
            column="AFFILIATION"
            length="255"
            not-null="true"
        />

        <property
            name="nameOfReporter"
            type="string"
            update="true"
            insert="true"
            column="NAME_OF_REPORTER"
            length="255"
            not-null="true"
        />

        <property
            name="from"
            type="string"
            update="true"
            insert="true"
            column="REPORTERS_EMAIL_ID"
            length="255"
            not-null="true"
        />

        <property
            name="messageBody"
            type="string"
            update="true"
            insert="true"
            column="MESSAGE_BODY"
            length="500"
            not-null="true"
        />

        <property
            name="subject"
            type="string"
            update="true"
            insert="true"
            column="SUBJECT"
            length="255"
        />

        <property
            name="reportedDate"
            type="date"
            update="true"
            insert="true"
            column="REPORTED_DATE"
        />

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="100"
        />

        <property
            name="comments"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="2000"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ReportedProblem.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
