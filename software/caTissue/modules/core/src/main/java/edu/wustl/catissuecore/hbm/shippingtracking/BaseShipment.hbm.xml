<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping
>
    <class
        name="edu.wustl.catissuecore.domain.shippingtracking.BaseShipment"
        table="CATISSUE_BASE_SHIPMENT"
        lazy="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_BASE_SHIPMENT_SEQ</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-User.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>
		
		<property
            name="label"
            type="string"
            update="true"
            insert="true"
            column="LABEL"
            length="50"
        />
        
        <many-to-one
           name="senderSite"
           class="edu.wustl.catissuecore.domain.Site"
           cascade="none"
           outer-join="auto"
           update="true"
           insert="true"
           column="SENDER_SITE_ID"  
           lazy="false"
       />
       
       <many-to-one
           name="receiverSite"
           class="edu.wustl.catissuecore.domain.Site"
           cascade="none"
           outer-join="auto"
           update="true"
           insert="true"
           column="RECEIVER_SITE_ID"  
           lazy="false"
       />
       
       <many-to-one
		   name="senderContactPerson"
		   class="edu.wustl.catissuecore.domain.User"
		   cascade="none"
		   outer-join="auto"
		   update="true"
		   insert="true"
		   column="SENDER_USER_ID"  
		   lazy="false"
	   />
	   
	   <many-to-one
		   name="receiverContactPerson"
		   class="edu.wustl.catissuecore.domain.User"
		   cascade="none"
		   outer-join="auto"
		   update="true"
		   insert="true"
		   column="RECEIVER_USER_ID"  
		   lazy="false"
	   />
	   
	   <property
           name="senderComments"
           type="string"
           update="true"
           insert="true"
           column="SENDER_COMMENTS"
           length="255"
       />
        
       <property
           name="receiverComments"
           type="string"
           update="true"
           insert="true"
           column="RECEIVER_COMMENTS"
           length="255"
       />
	   
	   <property
           name="createdDate"
           type="date"
           update="true"
           insert="true"
           column="CREATED_DATE"
       />
        
	   <property
           name="sendDate"
           type="timestamp"
           update="true"
           insert="true"
           column="SEND_DATE"
       />
        
       <set
            name="containerCollection"
            table="CATISSUE_SHIPMENT_CONTAINR_REL"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="BASE_SHIPMENT_ID"
            >
            </key>

            <many-to-many
                class="edu.wustl.catissuecore.domain.StorageContainer"
                column="CONTAINER_ID"
                outer-join="auto"
             />

        </set> 
        
        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="50"
        />

		<joined-subclass
            name="edu.wustl.catissuecore.domain.shippingtracking.Shipment"
            table="CATISSUE_SHIPMENT"
            dynamic-update="false"
            dynamic-insert="false"
			lazy="true"
        >
        <key
            column="IDENTIFIER"
        />
        
        <property
            name="barcode"
            type="string"
            update="true"
            insert="true"
            column="BARCODE"
            length="255"
        />
        
        <many-to-one
           name="shipmentRequest"
           class="edu.wustl.catissuecore.domain.shippingtracking.ShipmentRequest"
           cascade="none"
           outer-join="auto"
           update="true"
           insert="true"
           column="SHIPMENT_REQUEST_ID"  
           lazy="false"
       />
       
        </joined-subclass>

		<joined-subclass
            name="edu.wustl.catissuecore.domain.shippingtracking.ShipmentRequest"
            table="CATISSUE_SHIPMENT_REQUEST"
            dynamic-update="false"
            dynamic-insert="false"
			lazy="true"
        >
        <key
            column="IDENTIFIER"
        />
        
        <set
            name="specimenCollection"
            table="CATISSUE_SPECI_SHIPMNT_REQ_REL"
            fetch="subselect" lazy="false"
            inverse="false"
            cascade="all-delete-orphan"
            sort="unsorted"
        >
			 <cache usage="read-write" />
            <key
                column="SHIPMENT_REQ_ID"
            >
            </key>

            <many-to-many
                class="edu.wustl.catissuecore.domain.Specimen"
                column="SPECIMEN_ID"
                outer-join="auto"
             />

        </set>
        
        </joined-subclass>
        
    </class>
    
</hibernate-mapping>
