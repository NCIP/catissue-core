<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class 
    name="com.krishagni.rbac.domain.RoleAccessControl" 
    table="RBAC_ROLE_ACCESS_LIST">

    <id name="id" column="IDENTIFIER">
      <generator class="native">
        <param name="sequence">RBAC_ACL_SEQ</param>
      </generator>
    </id>
    
    <many-to-one
      name="role"
      class="com.krishagni.rbac.domain.Role"
      column="ROLE_ID"/>
    
    <many-to-one
      name="resource"
      class="com.krishagni.rbac.domain.Resource"
      column="RESOURCE_ID"/>
      
    <set 
      name="operations" 
      inverse="true" 
      cascade="all-delete-orphan"
      table="RBAC_ROLE_ACCESS_LIST_OPS">
      <key column="ACL_ID"/>
      <one-to-many class="com.krishagni.rbac.domain.ResourceInstanceOp"/>
    </set>
    
  </class>
</hibernate-mapping> 
 
