<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="edu.wustl.catissuecore.domain.AbstractSpecimen"
        table="CATISSUE_ABSTRACT_SPECIMEN"
		lazy="true"
    >
        <cache usage="read-write" />
        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_SPECIMEN_SEQ</param>
            </generator>
        </id>
		<many-to-one
            name="parentSpecimen"
            class="edu.wustl.catissuecore.domain.AbstractSpecimen"
            cascade="none"
            outer-join="false"
            update="true"
            insert="true"
            column="PARENT_SPECIMEN_ID"
            lazy="false"
        />
        <set
            name="childSpecimenCollection"
            table="CATISSUE_ABSTRACT_SPECIMEN"
            lazy="true"
            inverse="true"
            cascade="all"
            sort="unsorted"
        >
			 <cache usage="read-write" />
            <key
                column="PARENT_SPECIMEN_ID"
            >
            </key>

        <one-to-many
                  class="edu.wustl.catissuecore.domain.AbstractSpecimen"
        />

        </set>
	    <many-to-one
	            name="specimenCharacteristics"
	            class="edu.wustl.catissuecore.domain.SpecimenCharacteristics"
	            cascade="all"
	            lazy="false"
	            outer-join="auto"
	            update="true"
	            insert="true"
	            column="SPECIMEN_CHARACTERISTICS_ID"
	     />

        <property
            name="initialQuantity"
            type="double"
            update="true"
            insert="true"
            column="INITIAL_QUANTITY"
            length="50"
        />

        <property
            name="pathologicalStatus"
            type="string"
            update="true"
            insert="true"
            column="PATHOLOGICAL_STATUS"
            length="50"
        />

        <property
            name="lineage"
            type="string"
            update="true"
            insert="true"
            column="LINEAGE"
            length="50"
        />
         <property
            name="specimenClass"
            type="string"
            update="true"
            insert="true"
            column="SPECIMEN_CLASS"
            length="50"
        />
         <property
            name="specimenType"
            type="string"
            update="true"
            insert="true"
            column="SPECIMEN_TYPE"
            length="50"
        />
        <property
	            name="concentrationInMicrogramPerMicroliter"
	            type="double"
	            update="true"
	            insert="true"
	            column="CONCENTRATION"
	            length="50"
	        />

        <set
            name="specimenEventCollection"
            table="CATISSUE_SPECIMEN_EVENT_PARAM"
            fetch="join" lazy="false"
            inverse="true"
            cascade="all"
            sort="unsorted"
        >
		 <cache usage="read-write" />
            <key
                column="SPECIMEN_ID"
            >
            </key>

            <one-to-many
                  class="edu.wustl.catissuecore.domain.SpecimenEventParameters"
            />

        </set>

     <joined-subclass name="edu.wustl.catissuecore.domain.Specimen" table="CATISSUE_SPECIMEN">

           <key column="IDENTIFIER"/>

           <set
            name="consentTierStatusCollection"
            table="CATISSUE_CONSENT_TIER_STATUS"
            lazy="true"
            inverse="false"
            cascade="save-update"
            sort="unsorted"
        >
         <cache usage="read-write" />
              <key
                  column="SPECIMEN_ID"
              />
              <one-to-many
                  class="edu.wustl.catissuecore.domain.ConsentTierStatus"
              />
        </set>

	    <set
            name="biohazardCollection"
            table="CATISSUE_SPECIMEN_BIOHZ_REL"
            fetch="join" lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >
			 <cache usage="read-write" />
            <key
                column="SPECIMEN_ID"
            >
            </key>

            <many-to-many
                class="edu.wustl.catissuecore.domain.Biohazard"
                column="BIOHAZARD_ID"
                outer-join="auto"
             />

        </set>
          <set
            name="externalIdentifierCollection"
            table="CATISSUE_EXTERNAL_IDENTIFIER"
            fetch="join" lazy="false"
            inverse="false"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

            <key
                column="SPECIMEN_ID"
            >
            </key>

            <one-to-many
                  class="edu.wustl.catissuecore.domain.ExternalIdentifier"
            />

        </set>

		<one-to-one
           name="specimenPosition"
	       class="edu.wustl.catissuecore.domain.SpecimenPosition"
	       cascade="save-update"
	       outer-join="auto"
	       constrained="false"
	       property-ref="specimen"
       />

		<property
            name="label"
            type="string"
            update="true"
            insert="true"
            column="LABEL"
            length="255"
        />

        <property
            name="isAvailable"
            type="boolean"
            update="true"
            insert="true"
            column="AVAILABLE"
        />
        <property
            name="comment"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="2000"
        />

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="50"
        />

		 <property
            name="collectionStatus"
            type="string"
            update="true"
            insert="true"
            column="COLLECTION_STATUS"
            length="50"
        />
        <property
            name="barcode"
            type="string"
            update="true"
            insert="true"
            column="BARCODE"
            length="255"
            unique="true"
        />

		<property
            name="createdOn"
            type="date"
            update="true"
            insert="true"
            column="CREATED_ON_DATE"
        />

		<property
            name="availableQuantity"
            type="double"
            update="true"
            insert="true"
            column="AVAILABLE_QUANTITY"
            length="50"
        />
        
		<set
            name="specimenRecordEntryCollection"
            table="CATISSUE_SPECIMEN_REC_NTRY"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="SPECIMEN_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.deintegration.SpecimenRecordEntry"
              />
        </set>
        <many-to-one
            name="specimenCollectionGroup"
            class="edu.wustl.catissuecore.domain.SpecimenCollectionGroup"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="SPECIMEN_COLLECTION_GROUP_ID"
            lazy="false"
        />
        <many-to-one
            name="specimenRequirement"
            class="edu.wustl.catissuecore.domain.SpecimenRequirement"
            cascade="none"
            outer-join="auto"
            update="false"
            insert="true"
            column="REQ_SPECIMEN_ID"
            lazy="false"
        />

       <!-- <set
            name="imageCollection"
            table="CATISSUE_IMAGE"
            fetch="join" lazy="true"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="SPECIMEN_ID"
            >
            </key>

            <one-to-many
                  class="krishagni.catissueplus.imaging.domain.Image"
            />

        </set> --> 
	   
	   	 </joined-subclass>

	 <joined-subclass name="edu.wustl.catissuecore.domain.SpecimenRequirement" table="CATISSUE_CP_REQ_SPECIMEN">

	 	 <key column="IDENTIFIER"/>
	 	 <set
            name="specimenCollection"
            table="CATISSUE_SPECIMEN"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >
	         <cache usage="read-write" />
              <key
                  column="REQ_SPECIMEN_ID"
              />
              <one-to-many
                  class="edu.wustl.catissuecore.domain.Specimen"
              />
        </set>

        <property
            name="labelFormat"
            type="string"
            update="true"
            insert="true"
            column="LABELFORMAT"
            length="255"
        />
        <property
            name="specimenRequirementLabel"
            type="string"
            update="true"
            insert="true"
            column="SPEC_REQ_LABEL"
            length="255"
        />

		<property
	            name="storageType"
	            type="string"
	            update="true"
	            insert="true"
	            column="STORAGE_TYPE"
	            length="50"
		    />
		
	       <many-to-one
	            name="collectionProtocolEvent"
	            class="edu.wustl.catissuecore.domain.CollectionProtocolEvent"
	            cascade="none"
	            outer-join="auto"
	            update="true"
	            insert="true"
	            column="COLLECTION_PROTOCOL_EVENT_ID"
	        />

		   <property
	            name="activityStatus"
	            type="string"
	            update="true"
	            insert="true"
	            column="ACTIVITY_STATUS"
	            length="50"
	        />

	</joined-subclass>
  </class>
  <query name="getSpecimenIdByBarcode">select spec.id from edu.wustl.catissuecore.domain.Specimen spec where spec.barcode = ? and spec.activityStatus= ?</query>
    <query name="getConsentResponseCollection">Select specimen.consentTierStatusCollection from edu.wustl.catissuecore.domain.Specimen specimen WHERE specimen.label = ?
	</query>
	<query name="getQuantityAndAvailability">Select specimen.availableQuantity from edu.wustl.catissuecore.domain.Specimen specimen WHERE specimen.label = ? and specimen.isAvailable=? and specimen.activityStatus='Active'
	</query>
	<query name="updateQuantityAndAvailability">Update edu.wustl.catissuecore.domain.Specimen specimen SET specimen.availableQuantity=?,specimen.isAvailable=? where specimen.label=?
	</query>
	<query name="updateSpecimenStatusToClose">Update edu.wustl.catissuecore.domain.Specimen specimen SET specimen.activityStatus='Closed' where specimen.label=?
	</query>
	
	<query name="updateSpecimenStatusToDisable">Update edu.wustl.catissuecore.domain.Specimen specimen SET specimen.activityStatus='Disabled' where specimen.label=?
	</query>
	
	<query name="getSpecimenId">Select specimen.id from edu.wustl.catissuecore.domain.Specimen specimen where specimen.label=?
	</query>
	<query name="getSpecimenIdByLabel">select spec.id from edu.wustl.catissuecore.domain.Specimen spec where spec.label = ? and spec.activityStatus= ? </query>
	<query name="getSpecimenLabelById">select spec.label from edu.wustl.catissuecore.domain.Specimen spec where spec.id = ? and spec.activityStatus= ?</query>
	<query name="getSpecimenLabel">select spec.label from edu.wustl.catissuecore.domain.Specimen spec where spec.id = ? </query>
	<query name="updateAllSpecimenFromSCGToDisable">Update edu.wustl.catissuecore.domain.Specimen specimen SET specimen.activityStatus='Disabled' where specimen.specimenCollectionGroup.id=?</query>
	<query name="getCPID">select specimen.specimenCollectionGroup.collectionProtocolRegistration.collectionProtocol.id from edu.wustl.catissuecore.domain.Specimen as specimen where specimen.id=?</query>
	<query name="getAssociatedReportId">select scg.identifiedSurgicalPathologyReport.id from edu.wustl.catissuecore.domain.SpecimenCollectionGroup as scg, edu.wustl.catissuecore.domain.Specimen as specimen where specimen.id = ? and specimen.id in elements(scg.specimenCollection)</query>
	<query name="getSpecimenIdByLorB">select spec.id from edu.wustl.catissuecore.domain.Specimen spec where (spec.label = ? or spec.barcode = ?) and spec.activityStatus= ? </query>	
	<query name="getSCGnCPIDByLorB">select specimen.id, specimen.specimenCollectionGroup.id, specimen.specimenCollectionGroup.collectionProtocolRegistration.collectionProtocol.id from edu.wustl.catissuecore.domain.Specimen as specimen where (specimen.label = ? or specimen.barcode = ?) and specimen.activityStatus= ? </query>
	<query name="getSiteIdFromContainer">select specimen.specimenPosition.storageContainer.site.id from edu.wustl.catissuecore.domain.Specimen specimen where (specimen.id=? or specimen.label=? ) and specimen.activityStatus=?</query>
	<query name="selectParentSpecimenDetailsForAliquot">
	    		select specimen.activityStatus,scg.id, specimen.id, specimen.label,
				specimen.barcode, specimen.specimenClass, specimen.specimenType, specimen.pathologicalStatus,
				specimenCharacteristics.tissueSite, specimen.specimenCharacteristics.tissueSide,
				specimen.availableQuantity, specimen.concentrationInMicrogramPerMicroliter,specimen.initialQuantity from edu.wustl.catissuecore.domain.Specimen specimen left join specimen.specimenCollectionGroup scg
				left join specimen.specimenCharacteristics specimenCharacteristics where specimen.label=?
	</query>
	<query name="getCpIdFromSpecimenId">
	    select specimen.specimenCollectionGroup.collectionProtocolRegistration.collectionProtocol.id  from edu.wustl.catissuecore.domain.Specimen as specimen where 
		specimen.id = ?
	</query>
	<query name="getCpIdFromSpecimenLabel">
	 select specimen.specimenCollectionGroup.collectionProtocolRegistration.collectionProtocol.id  from edu.wustl.catissuecore.domain.Specimen as specimen where 
		specimen.label = ?
	</query>
	<query name="selectParentSpecimenDetailsForAliquotByBarcode">
	    		select specimen.activityStatus,scg.id, specimen.id, specimen.label,
				specimen.barcode, specimen.specimenClass, specimen.specimenType, specimen.pathologicalStatus,
				specimenCharacteristics.tissueSite, specimen.specimenCharacteristics.tissueSide,
				specimen.availableQuantity, specimen.concentrationInMicrogramPerMicroliter,specimen.initialQuantity  from edu.wustl.catissuecore.domain.Specimen specimen left join specimen.specimenCollectionGroup scg
				left join specimen.specimenCharacteristics specimenCharacteristics where specimen.barcode=?
	    
	</query>
	<query name="getAvailabelSpecimenLabel">
	    select specimen.label,specimen.barcode from  edu.wustl.catissuecore.domain.Specimen as specimen  where specimen.label = ? or specimen.barcode = ?
	</query>
	
	<query name="getSpecimenBylabel">from edu.wustl.catissuecore.domain.Specimen as specimen where specimen.label = ? and specimen.activityStatus= ? </query>
	<query name="getSpecimenByBarcode">from edu.wustl.catissuecore.domain.Specimen as specimen where specimen.barcode = ? and specimen.activityStatus= ? </query>
	<query name="getSpChars">select specimen.specimenCharacteristics from edu.wustl.catissuecore.domain.Specimen specimen where specimen.id=?</query>
</hibernate-mapping>
