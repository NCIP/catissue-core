<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.OrderItem"
        table="CATISSUE_ORDER_ITEM"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_ORDER_ITEM_SEQ</param>
            </generator>
        </id>

        <property
            name="description"
            type="string"
            update="true"
            insert="true"
            column="DESCRIPTION"
            length="1000"
        />
      
		<many-to-one
            name="distributedItem"
            class="edu.wustl.catissuecore.domain.DistributedItem"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="DISTRIBUTED_ITEM_ID"
        />

        <property
            name="status"
            type="string"
            update="true"
            insert="true"
            column="STATUS"
            length="50"
        />
		
		<component
            name="requestedQuantity"
            class="edu.wustl.catissuecore.domain.Quantity"
        >
        <property
            name="value"
            type="double"
            update="true"
            insert="true"
            column="REQUESTED_QUANTITY"
            length="50"
        />

        </component>
        
        
		
        <many-to-one
            name="order"
            class="edu.wustl.catissuecore.domain.OrderDetails"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ORDER_ID"
        />
        
        <joined-subclass

	    name="edu.wustl.catissuecore.domain.SpecimenOrderItem"
            table="CATISSUE_SPECIMEN_ORDER_ITEM"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />        
        
         <many-to-one
            name="newSpecimenArrayOrderItem"
            class="edu.wustl.catissuecore.domain.NewSpecimenArrayOrderItem"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ARRAY_ORDER_ITEM_ID"
        />
         
        <joined-subclass

	    name="edu.wustl.catissuecore.domain.PathologicalCaseOrderItem"
            table="CATISSUE_PATH_CASE_ORDER_ITEM"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

		<property
            name="pathologicalStatus"
            type="string"
            update="true"
            insert="true"
            column="PATHOLOGICAL_STATUS"
        />
        
        <property
            name="tissueSite"
            type="string"
            update="true"
            insert="true"
            column="TISSUE_SITE"
        />
        
        <property
            name="specimenClass"
            type="string"
            update="true"
            insert="true"
            column="SPECIMEN_CLASS"
        />
        
        <property
            name="specimenType"
            type="string"
            update="true"
            insert="true"
            column="SPECIMEN_TYPE"
        />
        
        <many-to-one
            name="specimenCollectionGroup"
            class="edu.wustl.catissuecore.domain.SpecimenCollectionGroup"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="SPECIMEN_COLL_GROUP_ID"
        />

	</joined-subclass>


	<joined-subclass

	    name="edu.wustl.catissuecore.domain.DerivedSpecimenOrderItem"
            table="CATISSUE_DERIEVED_SP_ORD_ITEM"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />
        
        <property
            name="specimenClass"
            type="string"
            update="true"
            insert="true"
            column="SPECIMEN_CLASS"
        />
        
        <property
            name="specimenType"
            type="string"
            update="true"
            insert="true"
            column="SPECIMEN_TYPE"
        />
        
        <many-to-one
            name="parentSpecimen"
            class="edu.wustl.catissuecore.domain.Specimen"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="SPECIMEN_ID"
        />
        
        </joined-subclass>
        <joined-subclass

	    name="edu.wustl.catissuecore.domain.ExistingSpecimenOrderItem"
            table="CATISSUE_EXISTING_SP_ORD_ITEM"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />
        <many-to-one
            name="specimen"
            class="edu.wustl.catissuecore.domain.Specimen"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="SPECIMEN_ID"
        />
        
        </joined-subclass> 
        </joined-subclass>  
        <!-- Specimen Array -->
        
        <joined-subclass

	    name="edu.wustl.catissuecore.domain.ExistingSpecimenArrayOrderItem"
            table="CATISSUE_SP_ARRAY_ORDER_ITEM"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />
        <many-to-one
            name="specimenArray"
            class="edu.wustl.catissuecore.domain.SpecimenArray"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="SPECIMEN_ARRAY_ID"
        />
        
        </joined-subclass> 
        <joined-subclass

	    name="edu.wustl.catissuecore.domain.NewSpecimenArrayOrderItem"
            table="CATISSUE_NEW_SP_AR_ORDER_ITEM"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />
        
        <many-to-one
            name="specimenArray"
            class="edu.wustl.catissuecore.domain.SpecimenArray"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="SPECIMEN_ARRAY_ID"
        />
        
        <many-to-one
            name="specimenArrayType"
            class="edu.wustl.catissuecore.domain.SpecimenArrayType"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ARRAY_TYPE_ID"
        />
        
        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
        />
        
        <set
            name="specimenOrderItemCollection"
            table="CATISSUE_SPECIMEN_ORDER_ITEM"
            lazy="false"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="ARRAY_ORDER_ITEM_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.SpecimenOrderItem"
              />
        </set>
        
        </joined-subclass>     
		<!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-OrderItem.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
