<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="edu.wustl.catissuecore.passwordutil.Password"
        table="CATISSUE_PASSWORD"
		lazy="true"
    >
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_PASSWORD_SEQ</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Password.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="password"
            type="string"
            update="true"
            insert="true"
            column="PASSWORD"
            length="255"
        />

        <property
            name="updateDate"
            type="date"
            update="true"
            insert="true"
            column="UPDATE_DATE"
        />

        <many-to-one
            name="user"
            class="edu.wustl.catissuecore.domain.User"
            cascade="none"
             
            update="true"
            insert="true"
            column="USER_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Password.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
