<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.Distribution"
        table="CATISSUE_DISTRIBUTION"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="systemIdentifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_SPEC_EVENT_PARAM_SEQ</param>
            </generator>
        </id>

        <many-to-one
            name="toSite"
            class="edu.wustl.catissuecore.domain.Site"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="TO_SITE_ID"
        />

        <many-to-one
            name="distributionProtocol"
            class="edu.wustl.catissuecore.domain.DistributionProtocol"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="DISTRIBUTION_PROTOCOL_ID"
        />

        <set
            name="distributedItemCollection"
            table="CATISSUE_DISTRIBUTED_ITEM"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="DISTRIBUTION_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.DistributedItem"
              />
        </set>

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="50"
        />

        <many-to-one
            name="specimen"
            class="edu.wustl.catissuecore.domain.Specimen"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="SPECIMEN_ID"
        />

        <property
            name="timestamp"
            type="timestamp"
            update="true"
            insert="true"
            column="EVENT_TIMESTAMP"
        />

        <many-to-one
            name="user"
            class="edu.wustl.catissuecore.domain.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="USER_ID"
        />

        <property
            name="comments"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="500"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Distribution.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
