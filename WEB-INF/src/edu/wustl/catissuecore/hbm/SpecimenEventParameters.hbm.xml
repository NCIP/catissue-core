<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping
>
    <class name="edu.wustl.catissuecore.domain.SpecimenEventParameters" table="CATISSUE_SPECIMEN_EVENT_PARAM">
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_SPEC_EVENT_PARAM_SEQ</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SpecimenEventParameters.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>
        
        <!--  discriminator column="EVENT_TYPE" type="string"/ -->
        
        <many-to-one
            name="specimen"
            class="edu.wustl.catissuecore.domain.Specimen"
            cascade="none"
             
            update="true"
            insert="true"
            column="SPECIMEN_ID"
        />

        <property
            name="timestamp"
            type="timestamp"
            update="true"
            insert="true"
            column="EVENT_TIMESTAMP"
        />

        <many-to-one
            name="user"
            class="edu.wustl.catissuecore.domain.User"
            cascade="none"
             
            update="true"
            insert="true"
            column="USER_ID"
        />

        <property
            name="comment"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="500"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SpecimenEventParameters.xml
            containing the additional properties and place it in your merge dir.
        -->

        <joined-subclass name="edu.wustl.catissuecore.domain.TransferEventParameters" table="CATISSUE_TRANSFER_EVENT_PARAM">
        <key column="SPE_ID"/>
        <many-to-one
            name="specimen"
            class="edu.wustl.catissuecore.domain.Specimen"
            cascade="none"
             
            update="true"
            insert="true"
            column="SPECIMEN_ID"
        />

        <property
            name="timestamp"
            type="timestamp"
            update="true"
            insert="true"
            column="EVENT_TIMESTAMP"
        />

        <many-to-one
            name="user"
            class="edu.wustl.catissuecore.domain.User"
            cascade="none"
             
            update="true"
            insert="true"
            column="USER_ID"
        />

        <property
            name="comment"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="500"
        />
        <property
            name="fromPositionDimensionOne"
            type="int"
            update="true"
            insert="true"
            column="FROM_POSITION_DIMENSION_ONE"
            length="30"
        />

        <property
            name="fromPositionDimensionTwo"
            type="int"
            update="true"
            insert="true"
            column="FROM_POSITION_DIMENSION_TWO"
            length="30"
        />

        <property
            name="toPositionDimensionOne"
            type="int"
            update="true"
            insert="true"
            column="TO_POSITION_DIMENSION_ONE"
            length="30"
        />

        <property
            name="toPositionDimensionTwo"
            type="int"
            update="true"
            insert="true"
            column="TO_POSITION_DIMENSION_TWO"
            length="30"
        />

        <many-to-one
            name="toStorageContainer"
            class="edu.wustl.catissuecore.domain.StorageContainer"
            cascade="none"
             
            update="true"
            insert="true"
            column="TO_STORAGE_CONTAINER_ID"
        />

        <many-to-one
            name="fromStorageContainer"
            class="edu.wustl.catissuecore.domain.StorageContainer"
            cascade="none"
             
            update="true"
            insert="true"
            column="FROM_STORAGE_CONTAINER_ID"
        />
        </joined-subclass>
        
        <joined-subclass name="edu.wustl.catissuecore.domain.CollectionEventParameters" table="CATISSUE_COLL_EVENT_PARAM">
        <key column="SPE_ID"/>
        <many-to-one
            name="specimen"
            class="edu.wustl.catissuecore.domain.Specimen"
            cascade="none"
             
            update="true"
            insert="true"
            column="SPECIMEN_ID"
        />

        <property
            name="timestamp"
            type="timestamp"
            update="true"
            insert="true"
            column="EVENT_TIMESTAMP"
        />

        <many-to-one
            name="user"
            class="edu.wustl.catissuecore.domain.User"
            cascade="none"
             
            update="true"
            insert="true"
            column="USER_ID"
        />

        <property
            name="comment"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="500"
        />
        <property
            name="collectionProcedure"
            type="string"
            update="true"
            insert="true"
            column="COLLECTION_PROCEDURE"
            length="50"
        />

        <property
            name="container"
            type="string"
            update="true"
            insert="true"
            column="CONTAINER"
            length="50"
        />
        </joined-subclass>
        
        <joined-subclass name="edu.wustl.catissuecore.domain.ReceivedEventParameters" table="CATISSUE_RECEIVED_EVENT_PARAM">
        <key column="SPE_ID"/>
        <many-to-one
            name="specimen"
            class="edu.wustl.catissuecore.domain.Specimen"
            cascade="none"
             
            update="true"
            insert="true"
            column="SPECIMEN_ID"
        />

        <property
            name="timestamp"
            type="timestamp"
            update="true"
            insert="true"
            column="EVENT_TIMESTAMP"
        />

        <many-to-one
            name="user"
            class="edu.wustl.catissuecore.domain.User"
            cascade="none"
             
            update="true"
            insert="true"
            column="USER_ID"
        />

        <property
            name="comment"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="500"
        />
        <property
            name="receivedQuality"
            type="string"
            update="true"
            insert="true"
            column="RECEIVED_QUALITY"
        />
        </joined-subclass>
        
        <joined-subclass name="edu.wustl.catissuecore.domain.DisposalEventParameters" table="CATISSUE_DISPOSAL_EVENT_PARAM">
        <key column="SPE_ID"/>
        <many-to-one
            name="specimen"
            class="edu.wustl.catissuecore.domain.Specimen"
            cascade="none"
             
            update="true"
            insert="true"
            column="SPECIMEN_ID"
        />

        <property
            name="timestamp"
            type="timestamp"
            update="true"
            insert="true"
            column="EVENT_TIMESTAMP"
        />

        <many-to-one
            name="user"
            class="edu.wustl.catissuecore.domain.User"
            cascade="none"
             
            update="true"
            insert="true"
            column="USER_ID"
        />

        <property
            name="comment"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="500"
        />
        <property
            name="reason"
            type="string"
            update="true"
            insert="true"
            column="REASON"
            length="255"
         />
        </joined-subclass>
        
        <joined-subclass name="edu.wustl.catissuecore.domain.DistributionEventParameters" table="CATISSUE_DISTRI_EVENT_PARAM">
        <key column="SPE_ID"/>
        <many-to-one
            name="specimen"
            class="edu.wustl.catissuecore.domain.Specimen"
            cascade="none"
             
            update="true"
            insert="true"
            column="SPECIMEN_ID"
        />

        <property
            name="timestamp"
            type="timestamp"
            update="true"
            insert="true"
            column="EVENT_TIMESTAMP"
        />

        <many-to-one
            name="user"
            class="edu.wustl.catissuecore.domain.User"
            cascade="none"
             
            update="true"
            insert="true"
            column="USER_ID"
        />

        <property
            name="comment"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="500"
        />
            <property
                name="distributedQuantity"              
                type="double"
                update="true"
                insert="true"
                column="DISTRIBUTED_QUANTITY"
            />
            <many-to-one
                name="distributionDetails"
                class="edu.wustl.catissuecore.domain.Distribution"
                cascade="none"
                 
                update="true"
                insert="true"
                column="DISTRIBUTION_ID"
            />
        </joined-subclass>
    </class>
	<query name="getDistributionEvent">select distEventParam.comment,distEventParam.distributedQuantity,distEventParam.timestamp,user.firstName,user.lastName,site.name from DistributionEventParameters distEventParam left join distEventParam.user user left join distEventParam.distributionDetails distribution left join distribution.toSite site where distEventParam.id = ?
	</query>
</hibernate-mapping>
