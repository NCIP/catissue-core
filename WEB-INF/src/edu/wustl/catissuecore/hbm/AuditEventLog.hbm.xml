<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.AuditEventLog"
        table="CATISSUE_AUDIT_EVENT_LOG"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="systemIdentifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="objectIdentifier"
            type="long"
            update="true"
            insert="true"
            column="OBJECT_IDENTIFIER"
            length="50"
        />

        <property
            name="objectName"
            type="string"
            update="true"
            insert="true"
            column="OBJECT_NAME"
            length="50"
        />

        <property
            name="eventType"
            type="string"
            update="true"
            insert="true"
            column="EVENT_TYPE"
            length="50"
        />

        <many-to-one
            name="audit"
            class="edu.wustl.catissuecore.domain.AuditEvent"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="AUDIT_EVENT_ID"
        />

        <set
            name="auditEventDetailsCollcetion"
            table="CATISSUE_AUDIT_EVENT_DETAILS"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="AUDIT_EVENT_LOG_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.AuditEventDetails"
              />
        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AuditEventLog.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
