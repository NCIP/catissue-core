#macro(getMessage $code)$messageSource.getMessage($code, null, $locale)#end

<object-schema>
  <name>user</name>
  <record> 
    <name>com.krishagni.catissueplus.core.administrative.events.UserDetail</name>
    
    <field>
      <caption>#getMessage("user_identifier")</caption>
      <attribute>id</attribute>
    </field>
    
    <field>
      <caption>#getMessage("user_last_name")</caption>
      <attribute>lastName</attribute>
    </field>

    <field>
      <caption>#getMessage("user_first_name")</caption>
      <attribute>firstName</attribute>
    </field>

    <field>
      <caption>#getMessage("user_domain_name")</caption>
      <attribute>domainName</attribute>
    </field>

    <field>
      <caption>#getMessage("user_login_name")</caption>
      <attribute>loginName</attribute>
    </field>

    <field>
      <caption>#getMessage("user_email")</caption>
      <attribute>emailAddress</attribute>
    </field>

    <field>
      <caption>#getMessage("user_institute")</caption>
      <attribute>instituteName</attribute>
    </field>

    <field>
      <caption>#getMessage("user_type")</caption>
      <attribute>type</attribute>
    </field>

    <field>
      <caption>#getMessage("user_address")</caption>
      <attribute>address</attribute>
    </field>

    <field>
      <caption>#getMessage("user_phone_number")</caption>
      <attribute>phoneNumber</attribute>
    </field>

  </record>
</object-schema>
