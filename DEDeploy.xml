				<delete>
					<fileset dir="${export.dir}/">
						<include name="**/*.txt" />
						<include name="**/Package.properties" />
					</fileset>
				</delete>


				<delete>
					<fileset dir="${dezip.dir}">
						<include name="**/*" />
					</fileset>
				</delete>
			</then>
			<else>
				<echo message=" " />
				<echo message="-----------------------------------------" />
				<echo message="caCore for ${entitygroupname} not generated" />
				<echo message="Generating caCore for ${entitygroupname}" />
				<echo message="-----------------------------------------" />
				<echo message=" " />

