<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="edu.wustl.catissuecore.domain.Site"
        table="CATISSUE_SITE"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_SITE_SEQ</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Site.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
            length="255"
            not-null="true"
            unique="true"
        />

        <property
            name="type"
            type="string"
            update="true"
            insert="true"
            column="TYPE"
            length="50"
        />

        <property
            name="emailAddress"
            type="string"
            update="true"
            insert="true"
            column="EMAIL_ADDRESS"
            length="255"
        />

        <many-to-one
            name="coordinator"
            class="edu.wustl.catissuecore.domain.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="USER_ID"
        />

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="50"
        />

        <many-to-one
            name="address"
            class="edu.wustl.catissuecore.domain.Address"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ADDRESS_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Site.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
