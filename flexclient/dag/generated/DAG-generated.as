				dagNode2.unSelect();
				if(dagNode2.nodeType==DAGConstants.VIEW_ONLY_NODE)
				{
					dagNode1.addOutAssociation(secondNode,c.name,0);
					dagNode2.addInAssociation(firstNode,c.name,0);
				}
				else
				{	
					var operatorIndex:int = path.operatorIndex;
