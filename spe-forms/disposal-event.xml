<form>
  <view>
    <name>SpecimenDisposalEvent</name>
    <caption>Disposal Event</caption>
    <table>CATISSUE_DISPOSAL_EVENT_PARAM</table>
    <primaryKey>IDENTIFIER</primaryKey>

    <row>
      <textArea>
        <name>reason</name>
        <udn>reason</udn>
        <caption>Reason</caption>
	<column>REASON</column>
        <height>2</height>
      </textArea>
    </row>

    <row>
      <userField>
        <name>user</name>
        <udn>user</udn>
        <caption>User</caption>
        <column>USER_ID</column>
      </userField>
    </row>

    <row>
      <datePicker>
        <name>time</name>
        <udn>time</udn>
        <caption>Date and Time</caption>
        <column>EVENT_TIMESTAMP</column>
        <format>MM-dd-yyyy HH:mm</format>
      </datePicker>
    </row>


    <row>
      <textArea>
        <name>comments</name>
        <udn>comments</udn>
        <caption>Comments</caption>
        <column>COMMENTS</column>
        <height>2</height>
      </textArea>
    </row>
  </view>
</form>
